
page {
		height: 100%;
		background-color: #F5F5F5;
}
.page {
		height: 100%;
		display: flex;
		flex-direction: column;
}
.header {
		background-color: #FFFFFF;
		padding: 32rpx 40rpx;
}
.search-box {
		display: flex;
		align-items: center;
		background-color: #F5F5F5;
		border-radius: 36rpx;
		padding: 20rpx 32rpx;
		margin-bottom: 32rpx;
}
.search-icon {
		margin-right: 16rpx;
}
.search-input {
		flex: 1;
		font-size: 14px;
		height: 36rpx;
		line-height: 36rpx;
}
.placeholder {
		color: #999999;
}
.filter-box {
		display: flex;
		justify-content: flex-start;
}
.filter-item {
		display: flex;
		align-items: center;
		margin-right: 48rpx;
		padding: 8rpx 0;
}
.filter-text {
		font-size: 14px;
		color: #333333;
		margin-right: 12rpx;
}
.statistics {
		display: flex;
		padding: 40rpx;
		background-color: #FFFFFF;
		margin-top: 24rpx;
}
.stat-item {
		flex: 1;
		display: flex;
		align-items: center;
}
.stat-icon {
		width: 88rpx;
		height: 88rpx;
		border-radius: 44rpx;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-right: 24rpx;
}
.bucket {
		background-color: rgba(255, 149, 0, 0.1);
}
.weight {
		background-color: rgba(0, 122, 255, 0.1);
}
.stat-content {
		display: flex;
		flex-direction: column;
}
.stat-num {
		font-size: 24px;
		color: #333333;
		font-weight: 500;
}
.stat-label {
		font-size: 12px;
		color: #999999;
		margin-top: 4rpx;
}
.order-list {
		flex: 1;
		overflow: auto;
		padding: 24rpx 40rpx;
}
.order-item {
		background-color: #FFFFFF;
		border-radius: 16rpx;
		padding: 32rpx;
		margin-bottom: 24rpx;
}
.order-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 24rpx;
}
.order-time {
		font-size: 14px;
		color: #666666;
}
.order-status {
		font-size: 14px;
		color: #999999;
}
.order-content {
		border-bottom: 1px solid #EEEEEE;
		padding-bottom: 32rpx;
}
.info-row {
		display: flex;
		margin-bottom: 24rpx;
}
.info-row:last-child {
		margin-bottom: 0;
}
.info-label {
		width: 160rpx;
		font-size: 14px;
		color: #666666;
}
.info-value {
		flex: 1;
		font-size: 14px;
		color: #333333;
}
.order-footer {
		padding-top: 32rpx;
		display: flex;
		justify-content: flex-end;
}
.detail-btn {
		background-color: #07C160 !important;
		border-color: #07C160 !important;
		padding: 0 32rpx !important;
}
